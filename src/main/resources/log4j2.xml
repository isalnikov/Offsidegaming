<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" shutdownHook="disable">
    <Properties>
        <Property name="log-path">/tmp/log/offsidegaming</Property>
    </Properties>
    <Appenders>
        <Console name="Simple" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyMMdd HH:mm:ss} [%-5level] %c{1}:%m%n" /> 
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="ru.isalnikov.offsidegaming" level="INFO"/>
        <Root level="DEBUG">
            <AppenderRef ref="Simple" />
        </Root>
    </Loggers>
</Configuration>